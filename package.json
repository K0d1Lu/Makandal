{
  "name": "@wedia/chrome-recorder-workflow",
  "version": "1.0.0",
  "description": "Workflow automatisé pour convertir les enregistrements Chrome DevTools Recorder en tests Cucumber",
  "keywords": [
    "chrome-recorder",
    "cucumber",
    "e2e-testing",
    "automation",
    "wedia",
    "bdd"
  ],
  "author": "Équipe Wedia",
  "license": "MIT",
  "main": "tools/chrome-to-cucumber-converter.js",
  "bin": {
    "makandal": "./bin/makandal-cli.js",
    "chrome-to-cucumber": "./tools/chrome-to-cucumber-converter.js",
    "chrome-workflow": "./scripts/chrome-workflow.sh"
  },
  "scripts": {
    "hi": "npm run hi-makandal",
    "hi-makandal": "node bin/hi-makandal.js",
    "makandal": "node bin/makandal-cli.js",
    "makandal:help": "node bin/makandal-cli.js --help",
    "makandal:portal": "node bin/makandal-cli.js -conf wedia-portal",
    "makandal:dev": "node bin/makandal-cli.js -conf wedia-portal-dev",
    "list-configs": "ls -la configs/*.json",
    "convert": "node tools/chrome-to-cucumber-converter.js",
    "convert:file": "./bin/convert-recording.sh",
    "convert:json": "./bin/convert-recording.sh",
    "workflow:file": "./bin/convert-recording.sh \"$1\" workflow || ./bin/convert-recording.sh",
    "workflow:json": "./bin/convert-recording.sh \"$1\" workflow || ./bin/convert-recording.sh",
    "recordings": "ls -la recordings/",
    "workflow": "./scripts/chrome-workflow.sh",
    "improve": "node tools/improve-generated-tests.js",
    "example": "npm run convert examples/example-chrome-recording.json",
    "test": "npm run example",
    "validate": "node -c tools/chrome-to-cucumber-converter.js && node -c bin/makandal-cli.js",
    "docs": "echo 'Documentation disponible dans docs/CLI_USAGE.md'",
    "generate-prompt": "node tools/cursor-prompt-generator.js",
    "agent-integrate": "node bin/agent-integrate.js",
    "env-setup": "node tools/env-manager.js"
  },
  "files": [
    "bin/",
    "configs/",
    "tools/",
    "scripts/",
    "docs/",
    "templates/",
    "generated-scripts/chrome-recorder-template.js",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wedia-group/wedia-demo.git",
    "directory": "Test/e2e-tests/chrome-recorder-workflow"
  },
  "bugs": {
    "url": "https://github.com/wedia-group/wedia-demo/issues"
  },
  "homepage": "https://github.com/wedia-group/wedia-demo#readme",
  "dependencies": {},
  "devDependencies": {},
  "peerDependencies": {
    "@cucumber/cucumber": "^12.0.0",
    "selenium-webdriver": "^4.0.0"
  }
}
